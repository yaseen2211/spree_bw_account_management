
<%vendors = []%>
<%vendors = order.products.group_by(&:vendor) %>
<% vendors.each do |vendor, products|%>
  <div class="bg-gry-set pad-20" id="order_summary-<%main_order.id%>">

    <div class="deli_ver_y" id="order" data-hook="">

      <div class="pur_ch details">
        <ul class="col-lg-6 col-md-6 col-sm-6 p-0 text-left">
          <li class="he_ad_bold_1">#<%= main_order.number%> - <%= order.number %></li>
          <li><%= @order_number_purchased_from_label.try(:title) %> (<%=vendor.try(:name) %>)</li>
        </ul>

        <% if  order.shipments.any? %>
          <% order.shipments.each do |ship| %>
            <ul class="col-lg-6 col-md-6 col-sm-6 p-0 ab-rht">
              <li><%= ship.shipped_at.present? ? "Shipped On:" + ship.shipped_at.strftime("%e/%m/%Y") : "" %></li>
              <li class="he_ad_bold_2"> <%= ship.tracking.present? ? "Tracking Number:" + ship.tracking.to_s : "" %></li>
            </ul>
          <% end %>
        <% end %>

      </div>

      <ul class="ress">
        <li class="bd_green" id="css-orders_icons">
        <%= image_tag "v-ico-green.svg", alt: "" %>
        <br><font>Order Received</font></li>
        <li class="divid_line">
        <%= image_tag "divider-line.png", alt: "" %>
        </li>
        <li class="bd_green" id="css-orders_icons">
        <%= image_tag "arrows-ico-green.svg", alt: "" %>
        <br><font>Order in Progress</font></li>
        <li class="divid_line">
        <%= image_tag "divider-line.png", alt: "" %>
        </li>
        <li class="<%= (order.complete? && order.shipped?) ? 'bd_green' : '' %>" id="css-orders_icons">
        <%= image_tag (order.complete? && order.shipped?) ? 'v2-ico-01.svg' : 'v2 ico-01.svg', alt: "" %>
        <br><font>Complete</font></li>
      </ul>

      <% order.line_items.each_with_index do |item, index| %>
        <% pro = item.variant.product %>
        <% product = item.variant.product%>
        <% variant = item.variant%>

        <% next if pro.id != item.variant.product.id%>
        <div class="col-lg-12 col-md-12 col-sm-12 tr_1 p-0">
          <div class="nam_cle2 col-lg-7 col-md-7 col-sm-7 p-0">

            <div class="col-lg-3 col-md-3 col-sm-3 p-0">

              <% if item.variant.images.length == 0 %>
                <%= link_to small_image(item.variant.product), item.variant.product %>
              <% else %>
                <%= link_to image_tag(main_app.url_for(item.variant.images.first.url(:small))), item.variant.product %>
              <% end %>

              <%# if  item.personalized_info.present? %>
<!--                <div class="text-center" style='margin-top: 6px'>-->
                  <%#= image_tag "arw-icon.png"%>
<!--                </div>-->
              <%# end %>

            </div>


            <div class="col-lg-9 col-md-9 col-sm-9 adip">

              <%= link_to item.variant.product, itemprop: "url" do %>
                <%= item.quantity.to_s + " x "%>
                <%= content_tag(:span, truncate(item.variant.product.name, length: 50), class: 'info', itemprop: "name", title: item.variant.product.name) %>
              <% end %>

              <br><p><%= truncate(item.description, length: 100) %></p>

              <!-- <div>
                <%#= item.variant.options_text unless item.variant.option_values.empty? %>
              </div> -->


              <% if variant.on_sale? %>
                <ul class="rt-prc">
                  <li class="wis_list"><%=  display_variant_price(product) %></li>
                  <li class="cm_wis"><del><%= display_original_price(variant)%></del><br><font><%= display_discount_percent(variant, append_text=@order_sale_off_label.try(:title)) %></font></li>
                </ul>
              <% else %>
                <ul class="rt-prc">
                  <li class="nom"><%= item.display_amount.to_html unless item.quantity.nil? %></li>
                </ul>
              <% end %>

              <% user_review = nil %>

              <% if item.variant.product.reviews.present?%>
                <%item.variant.product.reviews.each do |review|%>
                    <% next if review.user_id != @user.id%>
                    <% user_review = review%>
                <% end %>
              <% end %>

              <% if user_review.present? %>


                  <div class="odr-tb">
                    <ul>
                      <li>

                      <%#= render 'spree/reviews/stars', stars: user_review.rating %>
                      <%= render partial: "spree/en/account_management/reviews/print_review_stars", locals: {review: user_review}%>
                      </li>
                      <li class="rev_iew">
                        <a href="#" data-toggle="modal" data-target=".js-reveiw_<%=item.id%>"><%= @order_my_review_button_label.try(:title) %>
                        </a>
                      </li>
                    </ul>

                    <div id="Review_modal" class="modal fade js-reveiw_<%=item.id%>" role="dialog">
                      <div class="modal-dialog">
                        <div class="modal-content pr-pop-perso review_pop_set">
                            <div class="modal-header">
                            <h2 class="popup-title">Product Review</h2>
                             <button type="button" class="close" data-dismiss="modal">×</button>
                            </div>
                            <div class="modal-body">
                              <div class="review_da">
                              <h3><%= @order_my_review_product_name.try(:title) %>: (<%= user_review.product.name %>) <br>
                               <%= @order_my_review_date.try(:title) %>:  <%= user_review.created_at.strftime("%e/%m/%Y") %></h3>
                              <p id="popup-style"> <%= user_review.review %></p>
                              <div class="tr-v1-pop text-right">


                              <!-- <img src="images/star-2.png" alt=""> already commented -->



                              <%#= render 'spree/reviews/stars', stars: user_review.rating %> <!-- already commented -->



                              <%= render partial: "spree/en/account_management/reviews/print_review_stars", locals: {review: user_review}%>
                                </div>
                              </div>
                              <div class="modal-footer pop-ftr">
                                <button type="button" class="" data-dismiss="modal"><%= @order_my_review_close.try(:title) %></button>
                              </div>
                              <% if !user_review.approved %>
                                <div>
                                  <span style="color: red"> Review will be shown on product after admin approval</span>
                                </div>
                              <% end %>
                            </div>
                        </div>
                      </div>
                    </div>
               </div>


              <% else %>
                <div class="odr-tb">
                  <ul>
                    <li data-toggle="modal" class="js-rating-current-review" data-target=".js-add-reveiws_<%= item.id%>">
                      <table class="rating_set">
                        <tr>
                          <td><span class="rating star_rating" id="<%= item.id%>"></span></td>
                        </tr>
                      </table>
                    </li>
                    <li class="rev_siew"><a href="#"  data-toggle="modal" data-target=".js-add-reveiw_<%= item.id%>"><%= @order_review_button_label.try(:title) %></a></li>
                  </ul>
                </div>
                <div id="Add_Review_modal" class="modal fade js-add-reveiws_<%= item.id%> js-add-reveiw_<%= item.id%>" role="dialog">
                  <div class="modal-dialog">
                    <div class="modal-content pr-pop-perso review_pop_set">
                      <div class="modal-header">
                        <h2 class="popup-title"><%= @order_product_review_heading.try(:title) %></h2>
                        <button type="button" class="close js-click-<%= item.id%>" data-dismiss="modal">×</button>
                      </div>
                      <div class="modal-body">

                        <div class="review_da">
                          <p id="popup-style">Thank you for leving a review for the  <%=item.name%> you purchased on  <%= order.created_at.strftime("%e/%m/%Y")%></p>
                          <%= render partial: "spree/en/account_management/review", locals: {review: Spree::Review.new(product:product), product: product, sub_order_id: item.id}%>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>


            </div>
            <div class="clearfix"></div>
            <% if order.line_items.last != item  %>
              <div class="dvd"></div>
            <% end %>

            <div class="clearfix"></div>
          </div>

          <% if index == 0 %>
             <div class="vol_rma text-right tr_2 col-lg-5 col-md-5 col-sm-5 p-0 turn-btn">
               <a href="/admin/invoice/<%=order.number%>/invoice?format=pdf",format="pdf", type="button", target="_blank?" style="color: black"><button type="button">Download Invoice</button></a>

<!--                               <button type="button"><%#= link_to @order_download_invoice_button_label.try(format: 'pdf',:title), "/admin/invoice/#{order.number}/invoice",type: 'button', target:  "_blank", style: "color:black",format: 'pdf'%></button>-->
              <br>
              <%# if vendor.present? %>
                <%#= link_to @order_contact_store_button_label.try(:title), spree.new_vendor_contact_store_path(vendor.try(:id), order_number: order.number), target:  "_blank"%>
              <%# end %>

              <%# if spree_current_user.present? && order.completed? && order.shipped? && order.has_returnable_products? && order.has_returnable_line_items? %>
<!--                <br>-->
              <%#= link_to @order_request_return_button_label.try(:title), spree.new_order_return_authorization_path(order.parent_order) %>
              <%# end %>

<!--                <a href = "orders-return-request-en.html"><button>Request Return  </button></a> already commented -->
            </div>
          <% end %>

           <!-- <div class="vol_rma text-right tr_2 col-lg-5 col-md-5 col-sm-5 p-0 turn-btn">
           <button>Download Invoice</button>
             <a href="orders-contact-store-en.html"><button>Contact Store</button></a>
               <a href="orders-return-request-en.html"><button>Request Return  </button></a>
           </div> -->


        </div>
      <% end %>
    </div>
  </div>
<% end %>
<script>
   $(document).ready(function () {
       $('.star_rating > span:even').hide();
   })
</script>

<script type="text/javascript">
  $('.close').on('click',function(){
    $('.modal-backdrop').remove();
  })

</script>
<% os = main_order.state %>

<div id="order_summary-<%main_order.id%>" class = "small_detail_box_<%= main_order.id %>">
  <div class="odr-box" id="order" data-hook="">     
    <%= render partial: "spree/en/account_management/orders/main_order_details", locals: {order: main_order} %>
    <div class="clearfix"></div>     
    <div class="dvd"></div>          
    <div class="clearfix"></div>

    <div class="deli_ver_y">
     <ul>
     <li class="bd_green"><%= image_tag "recieved-icon-green.png" %><br><font>Order Received</font></li>

     <li class="divid_line"><%= image_tag "divider-line.png" %></li>
      
     <li class="<%= ( os == "delivery" || os == "payment") ? "bd_green" : "" %>">
        <%= image_tag ( os == "delivery" || os == "payment") ? "progress-icon-black-green.png" : "progress-icon-black-old.png" %>
        <br><font>Order in Progress</font></li>
     <li class="divid_line"><%= image_tag "divider-line.png" %></li>
     
     <li><%= image_tag "deliverd-icon-grey.png" %><br><font class="bd-4">Order Delivered</font></li>
     </ul>
   </div>
   
   <div class="cv-set-lal">
     <div class="pur_ch">
     <ul class="col-lg-12 col-md-12 col-sm-12 p-0">
     <li class="he_ad-1">#<%= main_order.number %></li>
     <li>- Purchased from (<%= main_order.products.map{|s| s.vendor.try(:name)}.uniq.reject(&:blank?).join(",") %>)</li>
     </ul>
     </div>
     
     <div class="der-mn">
      <div class="row">
        <div class="col-md-12 col-lg-12">
        <div class="col-md-9 col-lg-9">
          <% main_order.line_items.each_with_index do |item, index| %>
              <% if item.variant.images.length == 0 %>
                <%= link_to small_image(item.variant.product), item.variant.product %>
              <% else %>
                <%= link_to image_tag(main_app.url_for(item.variant.images.first.url(:small))), item.variant.product %>
              <% end %>
          <% end %>
        </div>
        <div class="col-md-3 col-lg-3">
          <ul class="sw-ord-button">
            <button class="show_details_<%=main_order.id%>">SHOW DETAILS</button>
          </ul>
        </div>
        </div>
      </div>
    </div>
   
   </div>



    <%#= render partial: "spree/en/account_management/orders/sub_orders_section", locals: {sub_orders: main_order.sub_orders, main_order: main_order} %>
  </div>

</div>

<div class="odr-box details_box_<%= main_order.id%>" style= "display: none;">     
  <%= render partial: "spree/en/account_management/orders/main_order_details", locals: {order: main_order} %>

